@model System_Analysis2.Models.ItemModel
@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/StaffLayout.cshtml";
}

<h2>EditItem</h2>



<div class="card">

    <div class="container" style="max-width:100%">
        @using (Html.BeginForm("EditItem", "Stocker", FormMethod.Post))
        {
            string path = "../../Content/uploadedImgs/" + Model.Item.UrlPath;
                <img src="@path" class="img-responsive" alt="" style="height: 200px;">
                @Html.Hidden("id", Model.Item.Id)
                <input type="text" name="Name" placeholder="Name" class="form-control" value="@Model.Item.Name" />
                <input type="text" name="Description" placeholder="Describtion" class="form-control" value="@Model.Item.Description" />
                <input type="number" name="Price" placeholder="price" class="form-control" value="@Model.Item.Price" />
                <input type="number" name="Quantity" placeholder="Quantity" class="form-control" value="@Model.Item.Quantity" />

                <input type="submit" value="Save Changes" class="btn btn-primary" />
                }


</div>
</div>
